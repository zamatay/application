<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/send_btn_blue</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="text" parent="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="bold_text" parent="text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff323232</item>
        <item name="android:textColorHint">#ffdcdcdc</item>
        <item name="android:buttonStyleToggle">@style/button</item>
        <item name="android:enabled">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/route_edittext</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
